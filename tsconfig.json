{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"erasableSyntaxOnly": true,
		"rewriteRelativeImportExtensions": true
	},
	"include": ["src/**/*"]
}
